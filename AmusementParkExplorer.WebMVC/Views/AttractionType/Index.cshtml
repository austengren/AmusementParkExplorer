@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table table-striped table-hover ">
    <tr>
        <th>
            @Html.ActionLink("Attraction Type", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AttractionTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AttractionTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AttractionTypeID })
            </td>
        </tr>
    }

</table>
