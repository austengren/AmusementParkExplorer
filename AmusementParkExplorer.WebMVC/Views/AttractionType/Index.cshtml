@model IEnumerable<AmusementParkExplorer.Models.AttractionTypeListItem>

@{
    ViewBag.Title = "Index";
}
<style>
    #SearchBox {
        float:right
    }
</style>

<h2>View Attraction Types</h2>

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info btn-sm" })
    </div>
    <div class="col-md-6">
        <div id="SearchBox">
            @using (Html.BeginForm())
            {
                <p>
                    @Html.TextBox("SearchString")
                    <input class="btn btn-info btn-sm" type="submit" value="Search" />
                </p>
            }
        </div>
    </div>
</div>

