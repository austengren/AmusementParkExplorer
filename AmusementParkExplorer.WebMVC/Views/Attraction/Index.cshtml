@model IEnumerable<AmusementParkExplorer.Models.AttractionListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AttractionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParkName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttractionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttractionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttractionRating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.AttractionID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AttractionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AttractionID })
            </td>
        </tr>
    }

</table>
